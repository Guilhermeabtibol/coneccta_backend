generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   // em producao, vamos usar hash para senha (ex: bcrypt)
  role      String   @default("sales") // "admin", "sales"
  createdAt DateTime @default(now())
  leads     Lead[]
}

model Lead {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  phone     String?
  source    String? // ex: Facebook, Instagram
  status    String  @default("new") // new, contacted, qualificado
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  client    Client?
}

model Client {
  id        Int @id @default(autoincrement())
  name      String
  email     String  @unique
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relacionamento com lead (se um lead for convertido)
  leadId    Int?     @unique
  lead      Lead?    @relation(fields: [leadId], references: [id])
}